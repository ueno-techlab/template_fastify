{
  "name": "template-fastify",
  "version": "1.0.0",
  "description": "Fastify + TypeScript + TypeBox + Prisma + OpenAPI + JWT template",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "logs:view": "cat logs/app.log | npx pino-pretty",
    "logs:watch": "tail -f logs/app.log | npx pino-pretty",
    "logs:errors": "cat logs/error.log | npx pino-pretty",
    "logs:errors:watch": "tail -f logs/error.log | npx pino-pretty"
  },
  "keywords": [
    "fastify",
    "typescript",
    "typebox",
    "prisma",
    "openapi",
    "jwt",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "@sinclair/typebox": "^0.34.20",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "rotating-file-stream": "^3.2.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.12.0",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.1.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
